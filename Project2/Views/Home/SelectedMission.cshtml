@model IEnumerable<Project2.Models.MissionQuestions>

@{
    ViewBag.Title = "SelectedMission";
}

<h2>@ViewBag.Mission.missionName Mission</h2>

<br />


<div class="row">
    <div class="col-md-6">
        <br />
        <br />
        @*<b style="font-size:15px;">Mission ID: </b> <i style="font-size:15px;">*@
            @*<i style="font-size:15px;">@ViewBag.Mission.missionID</i>
            <br />*@
            <b style="font-size:15px;">Mission Name: </b><i style="font-size:15px;">@ViewBag.Mission.missionName</i>
            <br />
            <b style="font-size:15px;">Mission type: </b><i style="font-size:15px;">@ViewBag.Mission.missionPresident</i>
            <br />
            <b style="font-size:15px;">Monthly price: </b><i style="font-size:15px;">@ViewBag.Mission.missionAddress</i>
            <br />
            <b style="font-size:15px;">Monthly price: </b><i style="font-size:15px;">@ViewBag.Mission.language</i>
            <br />
            <b style="font-size:15px;">Dominant Religion: </b><i style="font-size:15px;">@ViewBag.Mission.dominantReligion</i>
            <br />
            <b style="font-size:15px;">Climate: </b><i style="font-size:15px;">@ViewBag.Mission.climate</i>
    </div>
    <div class="col-md-6">
        <img src="~/Content/Images/mexico.jpg" />
    </div>

</div>

<br />
<br />

<h2>Mission FAQ's</h2>

<br />

<p>
    @Html.ActionLink("New Question", "Create", "MissionQuestions")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.missionName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.answer)

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.missionName)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.answer)
            </td>
            <td>
               @Html.ActionLink("Reply to this question","Edit", "MissionQuestions", new { id = item.missionQuestionID }, null) 
            </td>
        </tr>
    }

</table>


