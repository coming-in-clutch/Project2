@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row">
    <div class="col-md-6">

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <label for="inputEmail">Email address</label>
            @Html.TextBox("Email address")
            <br />
            <label for="inputPassword">Password</label>
            @Html.Password("Password")
            <br />
            <button type="submit">Login</button>
        }
        <br />

        @Html.ActionLink("Create New Account", "NewAccount", "Home")
    </div>
    <div class="col-md-6">
        Use another account to login
        <br />

        @Html.ActionLink("Google", "Google", "Home", null, new { @class = "btn btn-primary btn-large" })
    </div>

</div>
